{
	"name": "youtubetv",
	"productName": "youtubeTv",
	"version": "1.0.0",
	"description": "Convert your computer in a tv for youtube",
	"license": "MIT",
	"repository": "https://github.com/buster95/youtubeTv",
	"author": {
		"name": "Walter Corrales",
		"email": "corraleswalter@live.com",
		"url": "https://buster95.github.io"
	},
	"scripts": {
		"postinstall": "electron-builder install-app-deps",
		"lint": "xo",
		"test": "npm run lint",
		"start": "electron .",
		"pack": "electron-builder --dir",
		"dist": "electron-builder --windows",
		"dist2": "electron-builder --macos --linux --windows",
		"release": "np"
	},
	"dependencies": {
		"electron-context-menu": "^0.15.0",
		"electron-debug": "^3.1.0",
		"electron-store": "^5.2.0",
		"electron-unhandled": "^3.0.0",
		"electron-updater": "^4.3.1",
		"electron-util": "^0.13.0"
	},
	"devDependencies": {
		"electron": "^8.4.0",
		"electron-builder": "^21.2.0",
		"np": "^5.0.3",
		"xo": "^0.25.3"
	},
	"xo": {
		"envs": [
			"node",
			"browser"
		]
	},
	"np": {
		"publish": false,
		"releaseDraft": false
	},
	"build": {
		"appId": "com.buster95.youtubetv",
		"mac": {
			"category": "public.app-category.social-networking",
			"darkModeSupport": true
		},
		"dmg": {
			"iconSize": 160,
			"contents": [
				{
					"x": 180,
					"y": 170
				},
				{
					"x": 480,
					"y": 170,
					"type": "link",
					"path": "/Applications"
				}
			]
		},
		"linux": {
			"target": [
				"AppImage",
				"deb"
			],
			"category": "Network;Chat"
		}
	}
}
